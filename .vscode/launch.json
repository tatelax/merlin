    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nuxt",
            "cwd": "${workspaceFolder}/web",
            "command": "pnpm dev",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Websocket Build & Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build WS Server",
            "program": "${workspaceFolder}/websocket-server/bin/Debug/net6.0/websocket-server",
            "args": [],
            "cwd": "${workspaceFolder}/websocket-server",
            "stopAtEntry": false,
            "console": "integratedTerminal",
